@page "{id}"
@using ContosoCrafts.WebSite.Services
@using System.ComponentModel.DataAnnotations
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel
@{
    ViewData["Title"] = "Read page";
}
<div class="read-content">
    <h2 class="read-title, txt-color" id="productTitle">@Model.Product.Title</h2><br>

    <p class="card-text, txt-color">Celestial Type: @Model.Product.ProductType.GetName()</p>
    
    <p class="card-text, txt-color">Distance from the sun: @Model.Product.Distance</p>
    
    <img class="card-visible" src='@Model.Product.Image' alt='Image for @Model.Product.Title'>
    <br /><br />
    <p class="card-text, txt-color">@Model.Product.Description</p>

    <a class="btn btn-blue btn-info" href="@Model.Product.Url" role="button" target="_blank">External Resource Link</a> &nbsp; &nbsp;
    <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-grey btn-secondary">Update</a> &nbsp; &nbsp;
    <a asp-page="Delete" asp-route-id="@Model.Product.Id" class="btn btn-red btn-danger">Delete</a>
</div>

