@page
@using ContosoCrafts.WebSite.Services;
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.ExploreModel
@{
    ViewData["Title"] = "- Stormtroopers Space Explorer";
}

<div id="planetsCarousel" class="carousel slide" data-interval="0">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="card">
                <div class="carousel-text-body">
                    <h3 class="card-title">
                        Welcome to the Explore Page
                    </h3>
                    <p class="card-text">
                        Here you can look at the planets in order of their position in the solar system.<br />
                        Use the arrow buttons on either side to look around. We recommend you start with the right arrow button.
                    </p>
                </div>
            </div>
        </div>
        @foreach (var item in ProductService.GetAllData().OrderBy(x => x.Distance).ThenBy(x => x.ProductType))
        {
            <div class="carousel-item">
                <img class="d-block explore-img" src="@item.Image" alt="@item.Title">
                <p class="items-Explore">
                    @item.Title<br><br>
                    @item.Distance AU/Astronomical Units (distance from sun)<br><br>
                    @item.Description
                </p>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#planetsCarousel" role="button" data-slide="prev">
        <div class="button-contrast-background">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </div>
    </a>
    <a class="carousel-control-next" href="#planetsCarousel" role="button" data-slide="next">
        <div class="button-contrast-background">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </div>
    </a>
</div>